{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "compile with C++11",
            "type": "shell",
             "command": "clang++",
            "args": [
                "-std=c++11",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
         
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
